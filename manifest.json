{
    "manifest_version": 2,
    "name": "YouTube Video Emailer",
    "version": "1.0",
    "description": "Sends an email with the URL and name of a YouTube video I am watching.",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "https://mail.google.com/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["https://www.youtube.com/watch*"],
        "js": ["content.js"]
    }]
}